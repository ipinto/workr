<html>
    <head>
        <title>Workr: Job <%= job_info.name %></title>
    </head>
    <body>
        <h1><a href="/">Workr</a></h1>
        <h3>Job <%= job_info.name %></h3>
        <form method="post" action="/job/<%= job_info.name %>/run">
            <input type="submit" value="Run" />
        </form>
        <b>Executions: </b>
        <ul>
            <%- job_executions.each do |job_execution| -%>
            <li>
                <%= job_execution.id %>
            </li>
            <%- end -%>
        </ul>
    </body>
</html>
